{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": [ "DOM", "esnext" ],
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "./src/",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
